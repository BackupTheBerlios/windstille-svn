Application windstille
    :   $(badguy_objects)
    
        $(display_objects)

        $(font_objects)

        $(glutil_objects)

        $(gui_objects)
    
        $(input_objects)

        $(lisp_objects)

        $(physfs_objects)

        $(scripting_objects)

        $(sound_objects)

        $(sprite2d_objects)

        $(sprite3d_objects)

