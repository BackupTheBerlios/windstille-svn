Application windstille
    :   $(badguy_objects)
    
        $(display_objects)

        $(glutil_objects)
    
        $(input_objects)

        $(lisp_objects)

        $(physfs_objects)

        $(scripting_objects)

        $(sound_objects)

        $(sprite2d_objects)

        $(sprite3d_objects)

        $(tinygettext_objects)

	$(collision_objects)

        $(particles_objects)

        $(math_objects)

        $(sources)
;

C++Flags windstille : -DAPPDATADIR='\"$(appdatadir)\"' ;
