        $(math_objects)

        $(signals_objects)

        $(sources)
;

C++Flags windstille : -DAPPDATADIR='\"$(appdatadir)\"' ;
LinkWith windstille : squirrel ;
LFlags windstille : $($(USE_LIBS)_LIBS) ;
Help windstille : "Build the windstille executable" ;

